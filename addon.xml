<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.espn_3"
       name="ESPN"
       version="3.0.1"
       provider-name="github.com/kodi-addons">
    <requires>
        <import addon="xbmc.python" version="2.20.0"/>
        <import addon="script.module.routing" version="0.2.1"/>
        <import addon="script.module.elementtree" version="1.2.8"/>
        <import addon="script.module.simplejson" version="3.16.1"/>
        <import addon="script.module.m3u8" version="0.2.10"/>
        <import addon="script.module.requests" version="2.22.0" />
        <import addon="script.module.pyjwt" version="1.6.4" />
        <import addon="script.module.pytz" version="2014.2" />
        <import addon="script.module.six" version="1.11.0" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <language/>
        <platform>all</platform>
        <license>MIT</license>
        <summary lang="en_GB">Watch ESPN and ESPN+</summary>
        <description lang="en_GB">Unofficial Watch ESPN. Watch full live streaming sporting events and replays on ESPN's cable channels (with a valid cable provider), ESPN 3 (with a valid ISP) and ESPN+ (with a valid subscription), including football, baseball, cricket, soccer, and basketball events. NOT SUPPORTED BY ESPN OR DISNEY OR ANYONE ELSE USE AT YOUR OWN RISK.
        </description>
        <forum>http://forum.kodi.tv/showthread.php?tid=230418</forum>
        <source>https://github.com/kodi-addons/plugin.video.espn_3</source>
        <news>
            3.0.1
                - Made a fix for handling channels that are not in your cable subscription
            3.0.0
                - Added in support for ESPN+ content with a valid subscription
                - Updated the main index page to correspond to the latest Watch ESPN interface
                - Code updates to make the addon more modern
        </news>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
            <screenshot>resources/screenshot-main-index.jpg</screenshot>
            <screenshot>resources/screenshot-30-for-30.jpg</screenshot>
            <screenshot>resources/screenshot-espn-plus-episodes.jpg</screenshot>
        </assets>
    </extension>
</addon>
